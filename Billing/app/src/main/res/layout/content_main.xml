<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.deepanshu.billing.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="35dp"
        android:textColor="#F05"
        android:text="Welcome to Fast-Food Restaurent!!!"
        android:id="@+id/textView2" />

    <CheckBox
        android:text="HamBurger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/cbhb"
        android:layout_below="@+id/cbsand"
        android:layout_alignLeft="@+id/cbsand"
        android:layout_alignStart="@+id/cbsand" />

    <CheckBox
        android:text="Chowmein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbchow"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/cbhb"
        android:layout_alignLeft="@+id/cbhb"
        android:layout_alignStart="@+id/cbhb" />

    <CheckBox
        android:text="Pizza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbpizza"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/cbchow"
        android:layout_alignLeft="@+id/cbchow"
        android:layout_alignStart="@+id/cbchow" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_above="@+id/cbpizza"
        android:layout_alignRight="@+id/thb"
        android:layout_alignEnd="@+id/thb"
        android:id="@+id/tchow"
        android:background="@android:color/holo_orange_light"
        android:layout_alignLeft="@+id/thb"
        android:layout_alignStart="@+id/thb"
        android:text="0" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignTop="@+id/cbpizza"
        android:layout_alignLeft="@+id/tchow"
        android:layout_alignStart="@+id/tchow"
        android:id="@+id/tpizza"
        android:background="@android:color/holo_orange_light"
        android:text="0" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/thb"
        android:background="@android:color/holo_orange_light"
        tools:layout_width="wrap_content"
        android:layout_alignBaseline="@+id/cbhb"
        android:layout_alignBottom="@+id/cbhb"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/button"
        android:layout_alignLeft="@+id/tsand"
        android:layout_alignStart="@+id/tsand"
        android:text="0" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/tsand"
        android:background="@android:color/holo_orange_light"
        android:layout_above="@+id/cbhb"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/total"
        android:layout_alignStart="@+id/total"
        android:text="0" />

    <Button
        android:text="Calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_below="@+id/cbpizza"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5"
        android:layout_marginTop="21dp" />

    <CheckBox
        android:text="Sandwich"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="45dp"
        android:id="@+id/cbsand"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="00000"
        android:textColor="#F00"
        android:textSize="35dp"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/activity_horizontal_margin"
        android:id="@+id/total"
        android:background="@android:color/holo_orange_light"
        tools:layout_height="wrap_content"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/textView5"
        android:layout_below="@+id/button" />

    <TextView
        android:text="Your Bill:-"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_below="@+id/button"
        android:layout_alignRight="@+id/cbsand"
        android:layout_alignEnd="@+id/cbsand"
        android:layout_marginTop="14dp" />

</RelativeLayout>
